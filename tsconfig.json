{
  "compilerOptions": {
    "inlineSourceMap": false,
    "inlineSources": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "declaration": false,
    "noResolve": false,
    "jsx": "react",
    "reactNamespace": "RX",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./build/"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "webpack.config.ts"
  ]
}
